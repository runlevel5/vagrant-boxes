{
  "builders": [
    {
      "boot_key_interval": "1ms",
      "boot_command": [
        "root<enter><wait>",
        "ifconfig eth0 up && udhcpc -i eth0<enter><wait10>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/alpine-3.12/answers<enter><wait>",
        "setup-alpine -f $PWD/answers<enter><wait5>",
        "{{user `password`}}<enter><wait>",
        "{{user `password`}}<enter><wait>",
        "<wait10>y<enter>",
	"<wait10>",
        "rc-service sshd stop<enter>",
        "mount /dev/sda2 /mnt<enter>",
        "echo 'PermitRootLogin yes' >> /mnt/etc/ssh/sshd_config<enter>",
        "umount /mnt<enter>",
        "reboot<enter>"
      ],
      "accelerator": "kvm",
      "boot_wait": "5s",
      "disk_size": "10G",
      "disk_interface": "virtio-scsi",
      "http_directory": "http",
      "iso_checksum": "sha256:fe694a34c0e2d30b9e5dea7e2c1a3892c1f14cb474b69cc5c557a52970071da5",
      "iso_url": "http://dl-cdn.alpinelinux.org/alpine/v3.12/releases/x86_64/alpine-virt-3.12.0-x86_64.iso",
      "output_directory": "packer-alpine-3.12-x86_64",
      "shutdown_command": "echo {{user `password`}} | sudo -S /sbin/poweroff",
      "ssh_password": "{{user `password`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10m",
      "qemu_binary": "qemu-system-x86_64",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-boot", "strict=on" ]
      ],
      "type": "qemu",
      "vm_name": "packer-alpine-3.12-x86_64"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/alpine/00base.sh",
        "scripts/alpine/01alpine.sh",
        "scripts/alpine/01networking.sh",
        "scripts/alpine/02sshd.sh",
        "scripts/alpine/03vagrant.sh",
        "scripts/alpine/04sudoers.sh",
        "scripts/alpine/99minimize.sh"
      ]
    }
  ],
  "variables": {
    "username": "root",
    "password": "vagrant"
  },
  "post-processors": [
    {
      "keep_input_artifact": true,
      "output": "box/alpine-3.12-x86_64.box",
      "type": "vagrant"
    }
  ]
}
