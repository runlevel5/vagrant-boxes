{
  "builders": [
    {
      "boot_command": [
        "root<enter><wait>",
        "ifconfig eth0 up && udhcpc -i eth0<enter><wait10>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/alpine-3.12/answers<enter><wait>",
        "setup-alpine -f $PWD/answers<enter><wait5>",
        "{{user `password`}}<enter><wait>",
        "{{user `password`}}<enter><wait>",
        "<wait10>y<enter>",
	"<wait10><wait10><wait10>",
	"<wait10><wait10><wait10>",
	"<wait10><wait10><wait10>",
	"<wait10><wait10><wait10>",
	"<wait10><wait10><wait10>",
	"<wait10><wait10><wait10>",
	"<wait10><wait10><wait10>",
	"<wait10><wait10><wait10>",
	"<wait10><wait10><wait10>",
	"<wait10><wait10><wait10>",
        "reboot<enter>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
	"root<enter><wait5>",
        "{{user `password`}}<enter><wait5>",
	"echo http://dl-cdn.alpinelinux.org/alpine/edge/community >> /etc/apk/repositories<enter>",
	"echo http://dl-cdn.alpinelinux.org/alpine/edge/testing >> /etc/apk/repositories<enter>",
        "apk add sudo<enter><wait5>",
        "echo 'Defaults env_keep += \"http_proxy https_proxy\"' > /etc/sudoers.d/wheel<enter>",
        "echo '%wheel ALL=(ALL) ALL' >> /etc/sudoers.d/wheel<enter>",
        "adduser {{user `username`}}<enter><wait5>",
        "{{user `password`}}<enter><wait>",
        "{{user `password`}}<enter><wait>",
        "adduser {{user `username`}} wheel<enter><wait5>"
      ],
      "accelerator": "kvm",
      "boot_wait": "2m",
      "disk_size": "10G",
      "disk_interface": "virtio-scsi",
      "http_directory": "http",
      "iso_checksum": "b1f552d2ebdf8842d5e0965194fc64c12c5f713e331c043ab1af5f68f32bef5f",
      "iso_checksum_type": "sha256",
      "iso_url": "https://dl-cdn.alpinelinux.org/alpine/v3.12/releases/ppc64le/alpine-standard-3.12.0-ppc64le.iso",
      "output_directory": "packer-alpine-3.12-ppc64le",
      "shutdown_command": "echo {{user `password`}} | sudo -S /sbin/poweroff",
      "ssh_password": "{{user `username`}}",
      "ssh_port": 22,
      "ssh_username": "{{user `password`}}",
      "ssh_wait_timeout": "10m",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-boot", "strict=on" ]
      ],
      "qemu_binary": "qemu-system-ppc64",
      "machine_type": "pseries",
      "type": "qemu",
      "vm_name": "packer-alpine-3.12-ppc64le"
    }
  ],
  "variables": {
    "username": "vagrant",
    "password": "vagrant"
  },
  "post-processors": [
    {
      "keep_input_artifact": true,
      "output": "box/alpine-3.12-ppc64le.box",
      "type": "vagrant"
    }
  ]
}
